{% extends 'base.html.twig' %}

{% block title %}
Order Completed!
{% endblock %}

{% block body %}

{{ include("partials/title_section.html.twig", {'name':'Payment Success!'} ) }}

<section class="checkout">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="text-center order-complete">
                    <i class="fas fa-check-circle"></i>
                    <div class="heading">
                        <h3>Thank you, {{ order.user.firstname }} {{ order.user.lastname }}!</h3>
                    </div>
                    <div class="order-details">
                        <p>Payment made successfully!</p>
                        <p>Payment for order number <strong>{{ order.reference }}</strong> has been accepted.</p>
                        <p>Your payment is currently "pending verification". Payments are usually verified within 1 hour.
                            After verification, the seller will begin to process your order. During this time, you will not be able to change your order.</p>
                        <p>Thank you for your order! Your order is being processed and will be completed within 3-6 hours.
                            You will receive an email confirmation when your order is completed.</p>
                    </div>
                    <a href="{{ path('app_home') }}" class="btn btn-fill-out">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
