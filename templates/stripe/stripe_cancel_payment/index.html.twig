{% extends 'base.html.twig' %}

{% block title %}Payment Cancelled!
{% endblock %}

{% block body %}

{{ include("partials/title_section.html.twig", {'name':'Payment Cancelled!'} ) }}

<section class="checkout">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="text-center order-complete">
                    <i class="fas fa-ban"></i>
                    <div class="heading">
                        <h3>Sorry {{ order.user.firstname }} {{ order.user.lastname }}. Your payment has been cancelled!</h3>
                    </div>
                    <div class="order-details">
                        <p>Payment for order number <strong>{{ order.reference }}</strong> has been cancelled.</p>
                        <p>You have tried to pay for your order and we thank you.</p>
                        <p>Your payment has not been accepted. Your order has not been confirmed.</p>
                        <p>We invite you to connect to our site to renew your order.</p>
                    </div>
                    <div>
                        <a href="{{ path('app_checkout_show') }}" class="btn btn-fill-out">Retry Payment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
